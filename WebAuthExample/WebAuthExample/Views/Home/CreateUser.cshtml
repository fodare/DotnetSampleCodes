@model User
@{
    var message = ViewData["Message"] as string;
    var error = ViewData["Error"] as string;
}

<h1>Create new user:</h1>
<hr />
<div>
    @if (!string.IsNullOrEmpty(message) || !string.IsNullOrEmpty(error))
    {
        <p>@message</p>
        <p>@error</p>
    }
    <form action="/CreateUser" method="post">
        <input type="text" , asp-for="UserName", placeholder="Please enter username" />
        <input type="password" , asp-for="password" placeholder="Enter user password" />
        <input type="email" , asp-for="Email" placeholder="Enter user email" />
        <select asp-for="Role">
            <option value="Reader">Reader</option>
            <option value="Admin">Admin</option>
        </select>
        <input type="submit" value="Create user" />
        @Html.AntiForgeryToken()
    </form>
</div>